<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".login.Login"
    android:id="@+id/login_container">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBar"
        android:background="@color/overlayBackground"
        android:layout_alignParentTop="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_login"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/c1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBar">

        <ImageView
            android:id="@+id/headline1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/main_logo"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/headline2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:scaleType="centerInside"
            android:src="@drawable/login_img"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/email_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c1"
        android:focusable="true"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:focusableInTouchMode="true">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/signInEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_phone"
            style="@style/textInput"
            app:errorEnabled="true"
            app:hintEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:drawableEnd="@drawable/ic_email_black_24dp"
                style="@style/editTextInput"
                android:focusable="true"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/signInPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_pass"
            app:passwordToggleEnabled="true"
            style="@style/textInput"
            app:errorEnabled="true"
            app:hintEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                style="@style/editTextInput"
                android:focusable="true"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/c3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/email_container"
        android:layout_marginTop="-20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/login_user_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/brown"
                android:drawableTint="@color/brown"
                android:text="@string/login_with_verification_code"
                android:drawableStart="@drawable/ic_phone_iphone"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right"
                android:textAllCaps="false"
                android:drawablePadding="12dp"
                android:textAlignment="textStart"
                android:onClick="login_otp"
                android:layout_alignParentStart="true"
                android:layout_margin="12dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/login_user_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/holo_red_dark"
                android:src="@drawable/ic_check_black"
                app:borderWidth="0dp"
                android:onClick="bt_signIn_user"
                android:layout_alignParentEnd="true"
                android:layout_margin="12dp"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/c3">

        <CheckBox
            android:id="@+id/remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:textColor="@color/brown"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:gravity="start|center_vertical"
            android:text="@string/remember_me"
            android:buttonTint="@color/brown" />

        <Button
            android:id="@+id/forgot_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            android:textSize="14sp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:gravity="end|center_vertical"
            android:textColor="@color/brown"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:onClick="bt_skip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:layout_marginStart="24dp"
        style="@style/buttonBorderless"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="bt_signup"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="24dp"
        style="@style/buttonBorderless"/>

</RelativeLayout>