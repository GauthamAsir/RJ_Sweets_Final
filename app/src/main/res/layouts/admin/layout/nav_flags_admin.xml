<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/flags"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:textColor="@color/brown"
        android:textStyle="bold"
        android:textSize="42sp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/display_container_flags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="12dp"
                android:padding="12dp"
                android:layout_margin="6dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:enabled="true"
                            android:text="@string/latest_version"
                            android:gravity="center"
                            android:background="@drawable/button_background"
                            android:textColor="@color/white"
                            android:singleLine="true"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:padding="6dp"/>

                        <TextView
                            android:id="@+id/latest_version_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:text="5.1"
                            android:background="@drawable/button_background"
                            android:textColor="@color/white"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:clickable="true"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:enabled="true"
                            android:text="@string/mandatory_update"
                            android:gravity="center"
                            android:background="@drawable/button_background"
                            android:textColor="@color/white"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:padding="6dp"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true" />

                        <TextView
                            android:id="@+id/mandatory_update_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:text="true"
                            android:background="@drawable/button_background"
                            android:textColor="@color/white"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:gravity="center"
                            android:padding="6dp"
                            android:clickable="true"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:text="@string/make_orders"
                            android:background="@drawable/button_background"
                            android:textColor="@color/white"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:gravity="center"
                            android:padding="6dp"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:clickable="true"/>

                        <TextView
                            android:id="@+id/make_no_order_tv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/button_background"
                            android:textColor="@color/white"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:gravity="center"
                            android:padding="6dp"
                            android:text="true"
                            android:textSize="18sp"
                            android:clickable="true"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:background="@drawable/button_background"
                            android:textColor="@color/white"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:text="@string/make_no_orders_reason"
                            android:gravity="center"
                            android:padding="6dp"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:clickable="true"/>

                        <TextView
                            android:id="@+id/make_no_order_reason_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/button_background"
                            android:textColor="@color/white"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:textSize="18sp"
                            android:text="LOL LMAO"
                            android:gravity="center"
                            android:padding="6dp"
                            android:clickable="true"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:text="@string/splash_update_check"
                            android:enabled="true"
                            android:background="@drawable/button_background"
                            android:textColor="@color/white"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:gravity="center"
                            android:padding="6dp"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:clickable="true"/>

                        <TextView
                            android:id="@+id/splash_update_check_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/button_background"
                            android:textColor="@color/white"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:textSize="18sp"
                            android:text="true"
                            android:gravity="center"
                            android:padding="6dp"
                            android:clickable="true"/>

                    </LinearLayout>

                    <Button
                        android:id="@+id/edit_flags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/display_container_flags"
                        android:background="@drawable/button_background"
                        android:text="@string/edit"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginStart="6dp"
                        android:textSize="21sp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/display_edit_flags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="12dp"
                android:padding="12dp"
                android:layout_margin="6dp"
                android:visibility="gone"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@string/make_orders"
                            android:padding="6dp"
                            android:gravity="center"/>

                        <RadioGroup
                            android:id="@+id/make_no_order_radio_grp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/true_make_no_order"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/_true"/>

                            <RadioButton
                                android:id="@+id/false_make_no_order"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/_false"/>

                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@string/mandatory_update"
                            android:padding="6dp"
                            android:gravity="center"/>

                        <RadioGroup
                            android:id="@+id/mandatory_update_grp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/true_mandatory_update"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/_true"/>

                            <RadioButton
                                android:id="@+id/false_mandatory_update"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/_false"/>

                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@string/splash_update_check"
                            android:padding="6dp"
                            android:gravity="center"/>

                        <RadioGroup
                            android:id="@+id/splash_check_grp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/true_splash_check"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/_true"/>

                            <RadioButton
                                android:id="@+id/false_splash_check"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/_false"/>

                        </RadioGroup>

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/latest_version_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/latest_version"
                        style="@style/textInput"
                        app:errorEnabled="true"
                        app:hintEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            style="@style/editTextInput"
                            android:focusable="true"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/make_no_order_reason_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/make_no_orders_reason"
                        style="@style/textInput"
                        app:errorEnabled="true"
                        app:hintEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            style="@style/editTextInput"
                            android:focusable="true"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/back_flags"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/back"
                            android:background="@drawable/button_background"
                            android:textColor="@color/white"
                            android:textSize="21sp"
                            android:textAllCaps="false"
                            android:layout_margin="6dp"/>

                        <Button
                            android:id="@+id/update_flags"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/update"
                            android:background="@drawable/button_background"
                            android:textColor="@color/white"
                            android:textSize="21sp"
                            android:textAllCaps="false"
                            android:layout_margin="6dp"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>

