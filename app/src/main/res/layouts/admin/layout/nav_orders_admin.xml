<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/view_placed_order_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/truck_delivery"
                        android:scaleType="fitCenter"/>

                    <Button
                        android:id="@+id/view_placed_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/view_placed_order"
                        android:background="@drawable/button_border"
                        android:layout_margin="4dp"
                        android:textSize="18sp"
                        android:textAlignment="textStart"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textAllCaps="false"
                        android:textColor="@color/overlayBackground"
                        android:drawableEnd="@drawable/ic_keyboard_arrow_right"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/view_delivered_order_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/cupcake"
                        android:scaleType="fitCenter"/>

                    <Button
                        android:id="@+id/view_delivered_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/view_delivered_order"
                        android:background="@drawable/button_border"
                        android:layout_margin="4dp"
                        android:textSize="18sp"
                        android:textAlignment="textStart"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textAllCaps="false"
                        android:textColor="@color/overlayBackground"
                        android:drawableEnd="@drawable/ic_keyboard_arrow_right"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/view_rejected_order_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/rejected_stamp"
                        android:scaleType="fitCenter"/>

                    <Button
                        android:id="@+id/view_rejected_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/view_rejected_order"
                        android:background="@drawable/button_border"
                        android:layout_margin="4dp"
                        android:textSize="18sp"
                        android:textAlignment="textStart"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textAllCaps="false"
                        android:textColor="@color/overlayBackground"
                        android:drawableEnd="@drawable/ic_keyboard_arrow_right"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/view_search_order_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/search"
                        android:scaleType="fitCenter"
                        android:padding="5dp"/>

                    <Button
                        android:id="@+id/view_search_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/view_rejected_order"
                        android:background="@drawable/button_border"
                        android:layout_margin="4dp"
                        android:textSize="18sp"
                        android:textAlignment="textStart"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textAllCaps="false"
                        android:textColor="@color/overlayBackground"
                        android:drawableEnd="@drawable/ic_keyboard_arrow_right"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>