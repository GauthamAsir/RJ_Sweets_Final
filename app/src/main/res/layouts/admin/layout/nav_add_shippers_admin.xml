<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/addShipper_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_shipper"
        android:layout_marginBottom="12dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addShipperUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_shipper_name"
        style="@style/textInput"
        app:errorEnabled="true"
        app:hintEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textAutoComplete"
            android:drawableEnd="@drawable/ic_person_outline"
            style="@style/editTextInput"
            android:focusable="true"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addShipperPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_shipper_phone_number"
        style="@style/textInput"
        app:counterMaxLength="10"
        app:counterEnabled="true"
        app:errorEnabled="true"
        app:hintEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:drawableEnd="@drawable/ic_local_phone_black_24dp"
            style="@style/editTextInput"
            android:focusable="true"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addShipperEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_shipper_email"
        style="@style/textInput"
        app:errorEnabled="true"
        app:hintEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:drawableEnd="@drawable/ic_email_black_24dp"
            style="@style/editTextInput"
            android:focusable="true"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addShipperPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_shipper_password"
        app:passwordToggleEnabled="true"
        style="@style/textInput"
        app:errorEnabled="true"
        app:hintEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            style="@style/editTextInput"
            android:focusable="true"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/bt_addShipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_shipper"
        android:textAllCaps="false"
        android:layout_margin="12dp"
        style="@style/buttonBorderless"/>

</LinearLayout>