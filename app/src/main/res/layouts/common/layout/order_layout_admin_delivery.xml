<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_id_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#0111"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textColor="@color/overlayBackground"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/order_rejected_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Rejected"
            android:textSize="30sp"
            android:textAlignment="center"
            android:visibility="gone"
            android:textColor="@color/overlayBackground" />

        <LinearLayout
            android:id="@+id/order_detail_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/order_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="#0111"
                    android:textColor="@color/colorText"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/order_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="username"
                    android:paddingTop="10dp"
                    android:textColor="@color/colorText"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/order_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="@color/colorText"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/order_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9876543210"
                    android:textColor="@color/colorText"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/order_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="@color/colorText"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/order_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comment"
                    android:textColor="@color/colorText"
                    android:textStyle="italic" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="4">

            <Button
                android:id="@+id/bt_edit"
                android:text="@string/edit"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="@color/colorText"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <Button
                android:id="@+id/bt_details"
                android:text="@string/details"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="@color/colorText"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bt_direction"
                android:text="@string/direction"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="@color/colorText"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>