<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".delivery.OrderDetailDelivery"
    android:animateLayoutChanges="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pickup_delivery"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/order_info_delivery"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:elevation="4dp"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/order_id_delivery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="#0111"
                            android:textColor="@color/colorText"
                            android:textStyle="bold"
                            android:padding="6dp"/>

                        <TextView
                            android:id="@+id/user_name_delivery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Username"
                            android:paddingTop="10dp"
                            android:textColor="@color/colorText"
                            android:textStyle="italic"
                            android:padding="6dp"/>

                        <TextView
                            android:id="@+id/order_phone_delivery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="9876543210"
                            android:textColor="@color/colorText"
                            android:textStyle="italic"
                            android:padding="6dp"/>

                        <TextView
                            android:id="@+id/order_total_delivery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:textColor="@color/colorText"
                            android:textStyle="italic"
                            android:padding="6dp"/>

                        <TextView
                            android:id="@+id/order_address_delivery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:textColor="@color/colorText"
                            android:textStyle="italic"
                            android:padding="6dp"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/order_payment_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_info_delivery">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/header3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/radio_group"
                        android:text="@string/payment_summary"
                        android:textSize="21sp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="12dp"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:textColor="@color/colorText"/>

                    <LinearLayout
                        android:id="@+id/c5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/button_border">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="6dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="@string/items"
                                android:padding="4dp"
                                android:textAlignment="textStart"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="@string/packaging"
                                android:padding="4dp"
                                android:textAlignment="textStart"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="@string/delivery_charge"
                                android:padding="4dp"
                                android:textAlignment="textStart"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:text="@string/order_total"
                                android:padding="4dp"
                                android:textAlignment="textStart"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="6dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/items_total_delivery"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="@string/items"
                                android:padding="4dp"
                                android:textAlignment="textEnd"/>

                            <TextView
                                android:id="@+id/packaging_charge_delivery"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="@string/packaging"
                                android:padding="4dp"
                                android:textAlignment="textEnd"/>

                            <TextView
                                android:id="@+id/delivery_charge_delivery"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="@string/delivery_charge"
                                android:padding="4dp"
                                android:textAlignment="textEnd"/>

                            <TextView
                                android:id="@+id/order_total_final_delivery"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:text="@string/order_total"
                                android:padding="4dp"
                                android:textAlignment="textEnd"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/order_payment_summary"
                android:layout_above="@+id/pickup_delivery"
                android:layout_margin="10dp">

                <TextView
                    android:text="@string/order_details"
                    android:textColor="@color/colorText"
                    android:textSize="30sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/listsweets_details_delivery"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.agik.AGIKSwipeButton.View.Swipe_Button_View
        android:id="@+id/pickup_delivery"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/report_order"
        android:layout_margin="16dp"
        app:sb_swipe_text="Pick Up"
        app:sb_swipe_animate_text="true"
        app:sb_thumb_image="@drawable/ic_arrow_forward_white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/report_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/fab_margin"
        android:backgroundTint="@color/red"
        app:backgroundTint="@color/white"
        android:src="@drawable/ic_error_outline"
        android:tint="@color/white" />

</RelativeLayout>