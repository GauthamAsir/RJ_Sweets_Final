<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".user.navigation_drawer.order_user.OrderDetail"
    android:animateLayoutChanges="true">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:fillViewport="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/cardView"
        android:fadeScrollbars="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/order_info"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:elevation="4dp"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/order_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="#0111"
                        android:textSize="18sp"
                        android:textColor="@color/colorText"
                        android:layout_marginBottom="16dp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textAllCaps="false"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/order_details"
                        android:textSize="20sp"
                        android:textColor="@color/colorText"
                        android:layout_marginBottom="8dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/button_border"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="@string/order_status"
                                android:textSize="18sp"
                                android:textAlignment="textStart"
                                android:paddingStart="22dp"
                                android:paddingEnd="4dp"
                                android:paddingTop="12dp"
                                android:textColor="@color/colorText"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/order_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="22dp"
                                    android:paddingEnd="4dp"
                                    android:paddingTop="12dp"
                                    android:text="Status"
                                    android:textSize="18sp"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/colorText"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="@string/order_time"
                                android:textSize="18sp"
                                android:textAlignment="textStart"
                                android:paddingStart="22dp"
                                android:paddingEnd="4dp"
                                android:paddingTop="12dp"
                                android:textColor="@color/colorText"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/order_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="22dp"
                                    android:paddingEnd="4dp"
                                    android:paddingTop="12dp"
                                    android:text="Time"
                                    android:textSize="18sp"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/colorText"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="@string/order_date"
                                android:textSize="18sp"
                                android:textAlignment="textStart"
                                android:paddingStart="22dp"
                                android:paddingEnd="4dp"
                                android:paddingTop="12dp"
                                android:textColor="@color/colorText"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/order_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Date"
                                    android:textSize="18sp"
                                    android:textAlignment="textStart"
                                    android:paddingStart="22dp"
                                    android:paddingEnd="4dp"
                                    android:paddingTop="12dp"
                                    android:textColor="@color/colorText"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="@string/order_total"
                                android:textSize="18sp"
                                android:textAlignment="textStart"
                                android:paddingStart="22dp"
                                android:paddingEnd="4dp"
                                android:paddingTop="12dp"
                                android:textColor="@color/colorText"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/order_total"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Total"
                                    android:textSize="18sp"
                                    android:textAlignment="textStart"
                                    android:paddingStart="22dp"
                                    android:paddingEnd="4dp"
                                    android:paddingTop="12dp"
                                    android:textColor="@color/colorText"/>

                            </LinearLayout>

                        </LinearLayout>

                        <!--

                        <TextView
                            android:id="@+id/order_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="9876543210"
                            android:textColor="@color/colorText"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/order_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:textColor="@color/colorText"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/order_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Comment"
                            android:textColor="@color/colorText"
                            android:textStyle="italic" />-->

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/shipping_address"
                        android:textSize="20sp"
                        android:textColor="@color/colorText"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/button_border"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Username"
                            android:textSize="18sp"
                            android:textAlignment="textStart"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="12dp"
                            android:textColor="@color/colorText" />

                        <TextView
                            android:id="@+id/address_line1_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Line 1"
                            android:textSize="18sp"
                            android:textAlignment="textStart"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/colorText" />

                        <TextView
                            android:id="@+id/address_line2_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Line 2"
                            android:textSize="18sp"
                            android:textAlignment="textStart"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/colorText" />

                        <TextView
                            android:id="@+id/address_landmark_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Landark"
                            android:textSize="18sp"
                            android:textAlignment="textStart"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/colorText" />

                        <TextView
                            android:id="@+id/address_city_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Line 1"
                            android:textSize="18sp"
                            android:textAlignment="textStart"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/colorText" />

                        <TextView
                            android:id="@+id/address_state_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Line 1"
                            android:textSize="18sp"
                            android:textAlignment="textStart"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/colorText" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/payment_info"
                        android:textSize="20sp"
                        android:textColor="@color/colorText"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp"
                        android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/button_border"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:padding="12dp"
                        android:gravity="center"
                        android:textColor="@color/colorText"
                        android:text="@string/payment_method"/>

                    <TextView
                        android:id="@+id/payment_method"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:padding="12dp"
                        android:gravity="center"
                        android:text="Temp"
                        android:textColor="@color/colorText"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_below="@+id/order_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="@string/product_details"
                    android:textColor="@color/colorText"
                    android:textSize="30sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/listsweets"/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/overlayBackground"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnCancelOrder"
            android:text="@string/cancel_order"
            android:textColor="@color/colorText"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>