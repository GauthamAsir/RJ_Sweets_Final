<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_info"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:elevation="4dp"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:padding="6dp"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:padding="6dp"
            android:gravity="center"
            android:background="@drawable/button_border">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product name"
                android:textColor="@color/colorText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:paddingTop="10dp"
                android:textColor="@color/colorText"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="@color/colorText"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/product_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discount"
                android:textColor="@color/colorText"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/discount_container"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/button_background_light_green">

            <TextView
                android:id="@+id/product_dis_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10% Discount Applieddd"
                android:textColor="@color/white"
                android:gravity="center"/>

            <TextView
                android:id="@+id/product_dis_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="10000Rs"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="12dp"
                android:textSize="24sp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>