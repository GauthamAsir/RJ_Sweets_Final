<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <LinearLayout
        android:id="@+id/settings_container_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/settings_img_user"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="24dp" />

                <TextView
                    android:id="@+id/settings_txt_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/settings_img_user"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:padding="24dp"
                    android:letterSpacing="0.2"
                    android:textColor="@color/colorText"
                    android:textStyle="italic"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/settings_change_pass_container_user"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true">

            <Button
                android:id="@+id/settings_change_pass_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="@string/change_password"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="22sp"
                android:drawablePadding="12dp"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:drawableStart="@drawable/ic_security"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/settings_edit_address_container_user"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true">

            <Button
                android:id="@+id/settings_edit_address_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="@string/edit_address"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="22sp"
                android:drawablePadding="12dp"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:drawableStart="@drawable/ic_location_on"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/notification_container_user"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true">

            <Button
                android:id="@+id/notification_bt_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="@string/notifications"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="22sp"
                android:drawablePadding="12dp"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:drawableStart="@drawable/ic_notifications"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/settings_app_updater_container_user"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true">

            <Button
                android:id="@+id/settings_app_updater_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="@string/check_for_updates"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="22sp"
                android:drawablePadding="12dp"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:drawableStart="@drawable/ic_system_update"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/settings_logout_container_user"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true">

            <Button
                android:id="@+id/settings_logout_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="@string/menu_log_out"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="22sp"
                android:drawablePadding="12dp"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:drawableStart="@drawable/ic_menu_logout"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/settings_login_container_user"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true"
            android:visibility="gone">

            <Button
                android:id="@+id/settings_login_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="@string/login"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="22sp"
                android:drawablePadding="12dp"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:drawableStart="@drawable/ic_menu_logout"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true">

            <Button
                android:id="@+id/bt_contactUs_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="@string/contact_us"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="22sp"
                android:drawablePadding="12dp"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:drawableStart="@drawable/ic_help_outline"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>