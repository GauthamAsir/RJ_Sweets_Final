<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.PlaceOrder">

    <LinearLayout
        android:id="@+id/c1_user"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Payment Method"
            android:textSize="30sp"
            android:gravity="center"/>

        <RadioGroup
            android:id="@+id/payment_group_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/paypal_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PayPal"/>

            <RadioButton
                android:id="@+id/paytm_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paytm"/>

            <RadioButton
                android:id="@+id/cod_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cash On Delivery"/>

        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/btnplace_user"
        android:layout_below="@+id/c1_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Place"
        android:textColor="@color/colorText"
        android:layout_margin="8dp"/>

</RelativeLayout>