<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user.Address"
    android:gravity="center">

    <TextView
        android:id="@+id/address_text_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="34sp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/savedAddressContainer_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:padding="12dp"
        android:clickable="true"
        android:layout_below="@+id/address_text_user">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saved Address"
            android:textSize="18sp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/button_border">

            <TextView
                android:id="@+id/user_name_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="18sp"
                android:textAlignment="textStart"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/address_line1_details_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Line 1"
                android:textSize="18sp"
                android:textAlignment="textStart"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/address_line2_details_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Line 2"
                android:textSize="18sp"
                android:textAlignment="textStart"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/address_landmark_details_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Landark"
                android:textSize="18sp"
                android:textAlignment="textStart"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/address_city_details_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Line 1"
                android:textSize="18sp"
                android:textAlignment="textStart"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/address_state_details_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Line 1"
                android:textSize="18sp"
                android:textAlignment="textStart"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/colorText" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/addNewAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter New Address"
        android:layout_below="@+id/savedAddressContainer_user"
        android:background="@drawable/button_border"
        android:layout_margin="12dp"
        android:textSize="18sp"
        android:padding="12dp"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/overlayBackground"
        android:drawableEnd="@drawable/ic_keyboard_arrow_right"/>

</RelativeLayout>