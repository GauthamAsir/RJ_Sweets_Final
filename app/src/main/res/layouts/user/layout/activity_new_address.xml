<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user.NewAddress">

    <TextView
        android:id="@+id/address_text_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:layout_alignParentTop="true"
        android:textSize="34sp"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:textStyle="bold"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/address_text_user"
        android:layout_above="@+id/btn_user"
        android:scrollbars="vertical"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/textInput">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/address_line1_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/line1"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:helperText="@string/street_address"
                    style="@style/textInput2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/address_line2_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/line2"
                        style="@style/editTextInput"/>

                </com.google.android.material.textfield.TextInputLayout>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:helperText="Landmark"
                style="@style/textInput">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/address_landmark_1_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/eg_landmark"
                    style="@style/editTextInput"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:helperText="We are Available Only in Mumbai"
                android:clickable="false"
                style="@style/textInput">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/address_city1_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="@string/address_city"
                    style="@style/editTextInput"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:helperText="Pincode"
                style="@style/textInput"
                app:counterEnabled="true"
                app:counterMaxLength="6">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/address_pincode1_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pincode"
                    android:inputType="number"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:helperText="We are Available Only in Maharashtra"
                android:clickable="false"
                style="@style/textInput">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/address_state1_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/state"
                    android:enabled="false"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/textInput"
                app:helperText="Comment can be Null">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtComment_user"
                    android:hint="@string/comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:inputType="textMultiLine"
                    android:paddingTop="28dp"
                    android:paddingBottom="28dp"
                    android:textSize="20sp"
                    style="@style/editTextInput"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <CheckBox
                android:id="@+id/address_checkbox_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save_this_address_for_future_orders"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/btn_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelOrder_user"
            android:text="Cancel"
            android:textColor="@color/colorText"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/btnPlaceOrder_user"
            android:text="Place Order"
            android:textColor="@color/colorText"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</RelativeLayout>