<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button_border"
        android:layout_margin="12dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/addrs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:padding="6dp"
                android:textColor="@android:color/darker_gray"
                android:lineSpacingMultiplier="1.5"
                android:text="He \nhe he \nhe he \nhe he \nhe he \nenhe \nhe"
                android:textIsSelectable="true"
                android:clickable="true"
                android:textStyle="italic"/>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/select_adrs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use This Address"
            android:background="@drawable/button_border"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textAllCaps="false"
            android:textColor="@color/overlayBackground"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/button_border"
            android:gravity="end"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="6dp">

            <ImageView
                android:id="@+id/new_adrs"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:src="@drawable/ic_edit_black"
                android:clickable="true"
                android:padding="6dp"
                android:contentDescription="@string/enter_new_address"/>

            <ImageView
                android:id="@+id/delete_adrs"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:src="@drawable/ic_delete"
                android:tint="@color/red"
                android:clickable="true"
                android:padding="6dp"
                android:contentDescription="@string/delete_address"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>